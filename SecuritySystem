using System.Collections;
using UnityEngine;

[RequireComponent(typeof(AudioSource))]
public class SecuritySystem : MonoBehaviour
{
    private AudioSource _audioSourse;

    private void Start()
    {
        _audioSourse = GetComponent<AudioSource>();
    }

    public IEnumerator ReductionSound()
    {
        while (_audioSourse.volume != 0f)
        {
            _audioSourse.volume = Mathf.MoveTowards(_audioSourse.volume, 0.0f, Time.deltaTime);
            yield return null;
        }

    }

    public IEnumerator IncereaseSound()
    {
        _audioSourse.Play();
        while (_audioSourse.volume != 1f)
        {
            _audioSourse.volume = Mathf.MoveTowards(_audioSourse.volume, 1.0f, Time.deltaTime);
            yield return null;
        }
    }
}
