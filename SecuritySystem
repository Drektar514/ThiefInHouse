using System.Collections;
using UnityEngine;

[RequireComponent(typeof(AudioSource))]
public class SecuritySystem : MonoBehaviour
{
    private AudioSource _audioSourse;

    private void Start()
    {
        _audioSourse = GetComponent<AudioSource>();
    }

    public void TurnDownVolume()
    {
        StopCoroutine(TurnUpTheVolumeCorutine());
        StartCoroutine(TurnDownTheVolumeCorutine());
    }

    public void TurnUpVolume()
    {
        StopCoroutine(TurnDownTheVolumeCorutine());
        StartCoroutine(TurnUpTheVolumeCorutine());
    }

    private IEnumerator TurnDownTheVolumeCorutine()
    {
        while (_audioSourse.volume != 0f)
        {
            _audioSourse.volume = Mathf.MoveTowards(_audioSourse.volume, 0.0f, Time.deltaTime);
            yield return null;
        }

    }

    private IEnumerator TurnUpTheVolumeCorutine()
    {
        _audioSourse.Play();
        while (_audioSourse.volume != 1f)
        {
            _audioSourse.volume = Mathf.MoveTowards(_audioSourse.volume, 1.0f, Time.deltaTime);
            yield return null;
        }
    }
}
